<%- include('../partials/header') %>
<div class="container">
  <h1>Edit User Details</h1>

  <form action="/editUser" method="post">
    <!-- Replace :userId with the actual user ID when rendering the page -->

    <label for="updateUsername">Update Username:</label>
    <input type="text" id="updateUsername" name="updateFields[username]">

    <label for="updateEmail">Update Email:</label>
    <input type="email" id="updateEmail" name="updateFields[email]">

    <label for="updatePassword">Update Password:</label>
    <input type="password" id="updatePassword" name="updateFields[password]">

    <button type="submit">Update</button>
  </form>
</div>
<%- include('../partials/footer') %>